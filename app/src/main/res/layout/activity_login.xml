<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_layout"
    android:background="@color/colorPrimaryDark">
    <LinearLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
            <LinearLayout
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <android.support.v7.widget.CardView
                    android:layout_centerHorizontal="true"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:cardCornerRadius="50dp">
            <ImageView
                android:id="@+id/iv_logo"
               android:layout_margin="16dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/logo_abp"
                app:layout_collapseMode="parallax"/>
                </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_below="@id/iv_logo"
                android:layout_centerHorizontal="true"/>
            </LinearLayout>
        <LinearLayout
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
<android.support.v7.widget.CardView
    android:id="@+id/card_login"
    app:cardCornerRadius="25dp"
    android:layout_width="300dp"
    app:cardElevation="15dp"
    android:layout_height="wrap_content">
        <LinearLayout
            android:layout_margin="16dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/sp_login"
                android:entries="@array/spinner_login"
                android:layout_width="wrap_content"
                style="@style/style_spn">
            </android.support.v7.widget.AppCompatSpinner>
            <android.support.design.widget.TextInputLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:paddingStart="10dp"
                    android:maxLength="10"
                    android:id="@+id/et_phone_login"
                    android:inputType="phone"
                    android:hint="@string/phone_number"
                    android:ems="150"
                    android:drawableStart="@drawable/ic_phone"
                    style="@style/style_et" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_marginTop="15dp"
                app:passwordToggleEnabled="true"
                app:passwordToggleDrawable="@drawable/ic_pass_show"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:paddingStart="10dp"
                    android:id="@+id/et_password_login"
                    android:inputType="textWebPassword"
                    android:hint="@string/password_hint"
                    android:drawableStart="@drawable/ic_password"
                    style="@style/style_et"
                    tools:ignore="RtlSymmetry" />
            </android.support.design.widget.TextInputLayout>
            <Button
                android:layout_marginTop="25dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/btn_login"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="@string/submit"
                android:background="@color/colorPrimary"/>
        </LinearLayout>
</android.support.v7.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
